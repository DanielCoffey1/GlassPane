<Window x:Class="GlassPane.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GlassPane - Virtual Desktop Manager" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="AssignmentItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="2" 
                                    Opacity="0.1" 
                                    BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="GlassPane" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#0078D4" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Virtual Desktop Management Utility" 
                       FontSize="14" 
                       Foreground="#666666" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
            
            <!-- Status and Controls -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnStartService" 
                        Content="Start Service" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnStartService_Click"/>
                <Button x:Name="btnStopService" 
                        Content="Stop Service" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnStopService_Click"/>
                <Button x:Name="btnClearAll" 
                        Content="Clear All Assignments" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnClearAll_Click"/>
                <Button x:Name="btnConfigureKeybinds" 
                        Content="Configure Keybinds" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnConfigureKeybinds_Click"/>
                <Button x:Name="btnConfigurePersistentApps" 
                        Content="Configure Persistent Apps" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnConfigurePersistentApps_Click"/>
                <Button x:Name="btnTriggerAutoAssignment" 
                        Content="Auto-Assign Apps" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnTriggerAutoAssignment_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Assignments List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="AssignmentsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource AssignmentItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding DesktopName}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="#0078D4"/>
                                    <TextBlock Text="{Binding WindowTitle}" 
                                               FontSize="14" 
                                               Foreground="#333333" 
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding ProcessName}" 
                                               FontSize="12" 
                                               Foreground="#666666" 
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" 
                                        Content="Remove" 
                                        Style="{StaticResource ModernButton}"
                                        Background="#D13438"
                                        Click="RemoveAssignment_Click"
                                        Tag="{Binding DesktopNumber}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <Separator Margin="0,0,0,15"/>
            <TextBlock Text="Hotkeys (Default):" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Ctrl + [Number] - Assign focused window to Desktop [Number]" 
                       FontSize="12" 
                       Foreground="#666666"/>
            <TextBlock Text="Alt + [Number] - Switch to Desktop [Number] and focus assigned window" 
                       FontSize="12" 
                       Foreground="#666666"/>
            <TextBlock Text="Customize keybinds using the 'Configure Keybinds' button or tray menu." 
                       FontSize="12" 
                       Foreground="#666666" 
                       Margin="0,5,0,0"/>
            <TextBlock Text="Set up persistent app assignments to automatically assign apps to specific desktops." 
                       FontSize="12" 
                       Foreground="#666666" 
                       Margin="0,2,0,0"/>
            <TextBlock Text="The application will minimize to system tray when closed." 
                       FontSize="12" 
                       Foreground="#666666" 
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window> 